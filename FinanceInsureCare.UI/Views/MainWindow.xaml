<Window x:Class="FinanceInsureCare.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:core="clr-namespace:FinanceInsureCare.Core;assembly=FinanceInsureCare.Core"
        xmlns:constants="clr-namespace:FinanceInsureCare.Core.Constants;assembly=FinanceInsureCare.Core"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <DockPanel>
        <ContentControl prism:RegionManager.RegionName="{x:Static constants:RegionNames.TopbarRegion}" DockPanel.Dock="Top" />
        <ContentControl prism:RegionManager.RegionName="{x:Static constants:RegionNames.SidebarRegion}" DockPanel.Dock="Left" />
        <ContentControl prism:RegionManager.RegionName="{x:Static constants:RegionNames.ContentRegion}" />
    </DockPanel>
</Window>
